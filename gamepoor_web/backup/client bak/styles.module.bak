/* styles.module.css */
.container {
  /*background: url('/images/mmm.jpg') no-repeat center center fixed;
  background-size: cover;*/
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loginForm, .signupForm {
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login_title, .signup_title {
  margin-bottom: 20px;
}

.input, .signup_input {
  width: 100%;
}

.userId, .password {
  width: 100%;
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
}

.loginBut, .signup_button {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 5px;
  background-color: #5cb85c;
  color: white;
  cursor: pointer;
  text-align: center;
  margin-bottom: 10px;
  text-decoration: none;
  display: block;
}

.signupBut, .loginBut {
  background-color: #0275d8;
}

.loginBut:hover, .signup_button:hover, .signupBut:hover {
  opacity: 0.8;
}

.error {
  color: red;
  margin-bottom: 10px;
}

.link a {
  color: #0275d8;
  text-decoration: none;
  display: block;
  text-align: center;
  margin-top: 10px;
}

.link a:hover {
  text-decoration: underline;
}
